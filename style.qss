/* Shades of Purple Theme for ChatGPT Vault Search */

QMainWindow {
    background-color: #1e1e3f;
}

QWidget {
    color: #ffffff;
    font-family: "Segoe UI", "Roboto", "Helvetica Neue", sans-serif;
    font-size: 10pt;
}

QGroupBox {
    font-weight: bold;
    border: 1px solid #4d21b2;
    border-radius: 6px;
    margin-top: 12px;
    padding-top: 12px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 10px;
    padding: 0 3px;
    color: #a599e9;
}

QLineEdit {
    background-color: #2d2b55;
    border: 1px solid #4d21b2;
    border-radius: 4px;
    padding: 5px;
    color: #fff;
}

QLineEdit:focus {
    border: 1px solid #a599e9;
}

QPushButton {
    background-color: #343261;
    border: 1px solid #4d21b2;
    border-radius: 4px;
    padding: 6px 12px;
    min-width: 80px;
    color: #ffffff;
}

QPushButton:hover {
    background-color: #4d21b2;
}

QPushButton:pressed {
    background-color: #1e1e3f;
}

QPushButton#search_btn {
    background-color: #a599e9;
    color: #1e1e3f;
    font-weight: bold;
}

QPushButton#search_btn:hover {
    background-color: #b362ff;
    color: #ffffff;
}

QListWidget {
    background-color: #2d2b55;
    border: 1px solid #4d21b2;
    border-radius: 4px;
    outline: none;
}

QListWidget::item {
    padding: 10px;
    border-bottom: 1px solid #343261;
}

QListWidget::item:selected {
    background-color: #4d21b2;
    color: white;
}

QListWidget::item:hover {
    background-color: #343261;
}

QTextEdit {
    background-color: #2d2b55;
    border: 1px solid #4d21b2;
    border-radius: 4px;
    color: #ffffff;
    font-family: "Consolas", "Monaco", monospace;
}

QProgressBar {
    border: 1px solid #4d21b2;
    border-radius: 4px;
    text-align: center;
    color: #ffffff;
}

QProgressBar::chunk {
    background-color: #a599e9;
}

QStatusBar {
    background-color: #1e1e3f;
    color: #a599e9;
}

QSplitter::handle {
    background-color: #4d21b2;
}

QCheckBox {
    spacing: 5px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    background-color: #2d2b55;
    border: 1px solid #4d21b2;
    border-radius: 3px;
}

QCheckBox::indicator:checked {
    background-color: #a599e9;
}
